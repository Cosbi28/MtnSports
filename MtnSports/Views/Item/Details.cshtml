@model DataModels.Item

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <main role="main" class="pb-3">
        <h1 class="text-primary">@Html.DisplayFor(modelItem => Model.Name)</h1>

        <div>
            <hr />
        </div>
        <div class="d-flex w-75 mb-5" style="margin-bottom:8px">
            <div class="container">
                @*@Html.DisplayFor(modelItem => item.Photo)*@
                <img src="~/images/@Model.Photo" class="img-fluid" style="height:300px;width:300px"></img>
            </div>
            <div class="container-fluid" style="font-size:25px">
                <div class="container-fluid" style="font-size:25px">
                    <h3 class="text-primary">
                        Brand: @Html.DisplayFor(modelItem => Model.Brand)
                    </h3>
                    <h3 class="text-primary">
                        Size: @Html.DisplayFor(modelItem => Model.Size)
                    </h3>
                    <h3 class="text-primary mb-4">
                        Price: @Html.DisplayFor(modelItem => Model.Price)
                    </h3>
                    <div>
                        @Html.DisplayFor(modelItem => Model.Description)
                    </div>
                </div>
            </div>
            @*<td>
                @Html.DisplayFor(modelItem => item.Stock)
                </td>*@
        </div>
        <hr />
        <div class="form-check mt-5">

            <p>By pressing "Rent", I accept the Terms and Conditions.</p>

            <div>
                <a asp-action="Rent" asp-route-id="@Model?.Id" class="btn btn-primary me-1">Rent</a>
                <a asp-action="Index" class="btn btn-info">Back</a>
            </div>
        </div>
    </main>
</div>
