@{
    ViewData["Title"] = "Home Page";
}

@model DataModels.SearchViewModel

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<div class=" container-fluid text-center">
    <h1 class="display-4">Welcome to MtnSports</h1>
    <h3>Rent your winter equipment here</h3>

</div>
<div class="container-fluid  position-absolute top-50 start-50 translate-middle">
    <form class="d-flex bg-primary p-4 rounded" method="post" asp-action="Search">
        <input asp-for="ItemName" class="form-control me-sm-2" type="text" placeholder="Search">
        <input asp-for="PickUpDate" class="form-control me-sm-2" type="datetime-local" required placeholder="Pick-up date">
        <input asp-for="ReturnDate" class="form-control me-sm-2" type="datetime-local" required placeholder="Return date">
        <button class="btn btn-secondary " type="submit">Search</button>
    </form>
</div>
